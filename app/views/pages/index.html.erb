<div class="text-center mt-5">
  <h1 class="display-4">欢迎来到 <strong>话题墙</strong></h1>
  <p class="lead">输入话题关键词，查看相关内容。</p>

  <%= form_with url: "/topics/search", method: :get, local: true, class: "mt-4 d-flex justify-content-center" do |form| %>
    <%= form.text_field :q, placeholder: "#请输入话题", class: "form-control w-50 me-2" %>
    <%= form.submit "查看", class: "btn btn-primary" %>
  <% end %>

  <% if @recent_topics.present? %>
    <div class="mt-4">
      <h5 class="mb-2">最近搜索：</h5>
      <% @recent_topics.reverse.each do |topic| %>
        <%= link_to "##{topic}", "/topics/search?q=#{topic}", class: "badge bg-secondary me-2" %>
      <% end %>
    </div>
  <% end %>
</div>
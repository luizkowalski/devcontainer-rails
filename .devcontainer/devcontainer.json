{
  "name": "Devcontainer on Rails",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/app",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1.1.0": {},
    "ghcr.io/devcontainers/features/common-utils:2.5.6": {
      "username": "vscode",
      "userUid": 1001,
      "userGid": 1001,
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true,
      "upgradePackages": true
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1.0.2": {
      "packages": "libpq-dev, libvips"
    },
    "ghcr.io/roul/devcontainer-features/mise:1.0.6": {},
    "ghcr.io/roul/devcontainer-features/mise-node:1.0.3": {},
    "ghcr.io/roul/devcontainer-features/mise-bun:1": {},
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0.0.5": {
      "username": "vscode",
      "plugins": "bundler git rails ruby yarn"
    },
    "ghcr.io/devcontainers/features/sshd:1.1.0": {}
  },
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "EditorConfig.EditorConfig"
      ]
    },
    "settings": {
      "terminal.integrated.defaultProfile.linux": "zsh"
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // This can be used to network with other containers or the host.
  "forwardPorts": [
    5433
  ],
  "postStartCommand": "git config --global --add safe.directory /workspaces/app",
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": ".devcontainer/postCreate",
  "remoteUser": "vscode"
}
